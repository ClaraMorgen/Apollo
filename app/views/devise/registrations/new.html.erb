<div class="wrapper wrapper-session">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4 log-in">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: "Email", input_html: { class: "input-form-index" } %>
          <%= f.input :password, required: true, input_html: { class: "input-form-index" }, placeholder: "•••••••", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, input_html: { class: "input-form-index" }, required: true, placeholder: "Retype password" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-danger btn-block' %>
        </div>
        <% end %>
        <div class="buttons-links">
          <p>Already a fan? <strong><a href="/users/sign_in">Log in</a></strong></p>
          <p>Or <strong><a href="/users/auth/facebook">Sign up with Facebook</a></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
